@model LaptopsLLC.Brand

@{
    ViewBag.Title = "LaptopsInABrand";
}

<h2>LaptopsInABrand</h2>

<div>
    <h4>Brand</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>
</div>
<h4>The laptops of this brand are:</h4>
<ul>
    @foreach(var l in Model.Laptops)
    {
    <li>
        @l.Model : @l.DollarValue,  @l.QuantityAvailable. @Html.ActionLink("Buy Now", "BuyThisLaptop", new { id = l.Id })
    </li>
    }
</ul>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
