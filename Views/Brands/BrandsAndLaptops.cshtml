@model IEnumerable<LaptopsLLC.Brand>

@{
    ViewBag.Title = "BrandsAndLaptops";
}

<h2>BrandsAndLaptops</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
            <ul>
                @foreach (var l in item.Laptops)
                {
                    <li>
                        @l.Model  @l.DollarValue  @l.QuantityAvailable
                    </li>
                }
            </ul>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            @Html.ActionLink("Laptops In Stock", "LaptopsInStockforBrand", new { id = item.Id })
        </td>
    </tr>
}

</table>
